!!! 5
%html
	%head
		%g:set(var="entityName" value="${message(code: 'user.label', default: 'User')}")/
		%title
			%g:message(code='default.list.label' args='[entityName]')/
	%body
		.content.scaffold-list(role="main")
			%h1.ui-widget-header.ui-corner-all
				%g:message(code="default.list.label" args="[entityName]")/
			%table.list.ui-widget.ui-widget-content.ui-corner-all
				%thead
					%tr
						%g:sortableColumn(property="username" title="${message(code: 'user.username.label', default: 'User')}")/
						%td ${message(code: 'user.type.label', default: 'Type')}
				%tbody
					%g:each(in="${list}" status="i" var="instance")
						%tr(class="${(i % 2) == 0 ? 'even' : 'odd'}")
							%td
								%g:link(action="show" id="${instance.id}") ${fieldValue(bean: instance, field: "username")}
							%td
								${instance.type}
			%div(class="pagination")
				%g:paginate(total="${total}")/

		%div(style="padding-top:1em;")
			%button.jq-button(onclick="location.href='${createLink(action: 'create')}'")
				%g:message(code="default.new.label" args="[entityName]")/